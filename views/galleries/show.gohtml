{{define "yield"}}
<div class="row">
  <div class="col-md-12">
    <h1>
        {{.Title}}
    </h1>
  </div>
</div>
<div class="row">
  {{range .SplitImages 3}}
    <div class="col-md-4">
      {{range .}}
        <a href="{{.Route}}">
          <img src="{{.Route}}" class="thumbnail">
        </a>
      {{end}}
    </div>
  {{end}}
</div>

<!-- Styles should be in style sheets in prod. -->
<style>
  .thumbnail {
    width: 100%;
  }
</style>
{{end}}
